<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/grayScale400</item>
    </style>

    <style name="Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/grayScale400</item>
    </style>

    <style name="Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/grayScale400</item>
    </style>

    <style name="Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/grayScale500</item>
    </style>

    <style name="Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/grayScale500</item>
    </style>

    <style name="Body1.SemiBold" parent="Body1">
        <item name="fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="TextButton" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="background">?attr/selectableItemBackground</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@color/grayScale200</item>
    </style>

</resources>